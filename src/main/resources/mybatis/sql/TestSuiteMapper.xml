<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.edgegallery.atp.repository.mapper.TestSuiteMapper">
    <select id="getTestSuiteByName"
            resultType="org.edgegallery.atp.model.testsuite.TestSuitePo"
            parameterType="String">
        select * from test_suite_table
         <where>
          <if test="nameEn != null and nameEn !=''">
            nameEn = #{nameEn}
          </if>
          <if test="nameCh != null and nameCh !=''">
            and nameCh = #{nameCh}
          </if>
        </where>
    </select>
    
    <select id="getAllTestSuite"
            resultType="org.edgegallery.atp.model.testsuite.TestSuitePo"
            parameterType="String">
        select * from test_suite_table
         <where>
          <if test="nameEn != null and nameEn !=''">
            nameEn ~* #{nameEn}
          </if>
          <if test="nameCh != null and nameCh !=''">
             nameCh ~* #{nameCh}
          </if>
          <if test="scenarioId != null and scenarioId !=''">
            and scenarioIdList ~* #{scenarioId}
          </if>
        </where>
        ORDER BY nameEn DESC
    </select>
    
    <insert id="createTestSuite"
		parameterType="org.edgegallery.atp.model.testsuite.TestSuitePo">
		insert into
		test_suite_table
		(id, nameCh, nameEn, descriptionCh, descriptionEn,scenarioIdList)
		VALUES
		(#{id}, #{nameCh}, #{nameEn},
		#{descriptionCh},
		#{descriptionEn},#{scenarioIdList})
	</insert>
  
   <update id="updateTestSuite" parameterType="org.edgegallery.atp.model.testsuite.TestSuitePo">
        UPDATE
        test_suite_table set       
          <if test="nameEn != null and nameEn !=''">
            nameEn = #{nameEn},
          </if>
          <if test="nameCh != null and nameCh !=''">
            nameCh = #{nameCh},
          </if>
          <if test="descriptionCh != null and descriptionCh !=''">
            descriptionCh = #{descriptionCh},
          </if>  
          <if test="descriptionEn != null and descriptionEn !=''">
            descriptionEn = #{descriptionEn},
          </if>   
          <if test="scenarioIdList != null">
            scenarioIdList = #{scenarioIdList},
          </if>                              
           id=#{id}
        where id = #{id}
    </update>
    
    <delete id="deleteTestSuite" parameterType="java.lang.String">
        DELETE FROM
        test_suite_table
        WHERE
        id = #{id}
    </delete>
    
    <select id="getTestSuiteById"
            resultType="org.edgegallery.atp.model.testsuite.TestSuitePo"
            parameterType="String">
        select * from test_suite_table where id = #{id}
    </select>
    
    <select id="batchQueryTestSuites"
            resultType="org.edgegallery.atp.model.testsuite.TestSuitePo"
            parameterType="String">
        select * from test_suite_table where id in 
	    <foreach collection="ids" item="id" open="(" close=")" separator=",">
	      #{id}
	   </foreach>
    </select>
</mapper>
